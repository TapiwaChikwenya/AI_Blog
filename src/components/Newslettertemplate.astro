---
interface Props {
  subject: string;
  content: string;
}

const { subject, content } = Astro.props;
---

<html>
  <head>
    <title>{subject}</title>
  </head>
  <body>
    <table width="100%" cellpadding="0" cellspacing="0" border="0">
      <tr>
        <td align="center">
          <table width="600" cellpadding="0" cellspacing="0" border="0">
            <tr>
              <td style="background-color: #f4f4f4; padding: 20px;">
                <h1>{subject}</h1>
                <div set:html={content}></div>
                <p>
                  <a href="https://yourwebsite.com">Visit our website</a>
                </p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>